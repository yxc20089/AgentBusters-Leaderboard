FROM ghcr.io/astral-sh/uv:python3.13-bookworm

# Create non-root user
RUN adduser agent
USER agent
WORKDIR /home/agent

# Copy project files
COPY --chown=agent:agent pyproject.toml ./
COPY --chown=agent:agent README.md ./
COPY --chown=agent:agent src src

# Note: BizFinBench data is fetched dynamically from HuggingFace API at runtime
# Only small local data files needed for Options and CSV datasets
# Note: PyTorch/sentence-transformers removed - using LLM for semantic similarity instead
COPY --chown=agent:agent data/options data/options
COPY --chown=agent:agent data/synthetic_questions data/synthetic_questions
COPY --chown=agent:agent finance-agent/data/public.csv finance-agent/data/public.csv
COPY --chown=agent:agent config config

# Install dependencies with uv
RUN \
    --mount=type=cache,target=/home/agent/.cache/uv,uid=1000 \
    uv sync --locked || uv sync

# Entry point for the Green Agent A2A server
ENV EVAL_CONFIG="config/eval_config.yaml"
ENTRYPOINT ["uv", "run", "src/cio_agent/a2a_server.py"]
CMD ["--host", "0.0.0.0", "--eval-config", "config/eval_config.yaml"]
EXPOSE 9109
