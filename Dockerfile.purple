# Dockerfile for Purple Agent - Finance Analysis Agent
# For AgentBeats Competition

FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install uv for faster package installation
RUN pip install uv

# Copy project files
COPY pyproject.toml .
COPY src/ ./src/
COPY scripts/ ./scripts/

# Install CPU-only PyTorch first (much smaller than full PyTorch with CUDA)
RUN uv pip install --system torch --index-url https://download.pytorch.org/whl/cpu

# Install the package (without dev dependencies)
RUN uv pip install --system -e .

# Expose A2A port
EXPOSE 9110

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV HOST=0.0.0.0
ENV PORT=9110
ENV PYTHONPATH=/app/src:/app

# Run the Purple Agent server
CMD ["purple-agent", "serve", "--host", "0.0.0.0", "--port", "9110"]
